<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/bootstrap-3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
    @Styles.Render("~/Content/css")
    <script src="~/Content/bootstrap-3.1.1/js/bootstrap.min.js"></script>
    @RenderSection("head",false)
    <style type="text/css">
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Koolla Example", "Index","Home",null,new{@class="navbar-brand"})
            </div>
            <div class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="navbar-nav nav">
                    @RenderSection("navbar",true)
                </ul>
                <div class="navbar-right navbar-nav nav">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <hr />
    <footer>
        <p>gyx9208@@gmail.com 2014</p>
    </footer>
</body>
</html>
